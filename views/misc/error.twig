{# VARIBLES #}
{% set footer = false %}
{% set html_class = 'error-bg' %}
{% set body_class = 'no-body-bg' %}

{% extends "master.twig" %}

{# ----------------------------------------------------------- #}
{% block titulo %}ERROR{% endblock %}
