{# VARIBLES #}

{% set opcion_activa = 2 %}
{% extends "partido/gestion.twig" %}

{# ----------------------------------------------------------- #}
{% block titulo %}Eliminar grupo político{% endblock %}
{# ----------------------------------------------------------- #}
{% block gestion %}
<h4>Grupo {{ partido.nombre }}</h4>
<h6 class="subheader">Eliminación del grupo politico</h6>
<hr>
<div class="panel text-center" style="background-color:#9d2727; border: 0;">
	<h4 style="color:#FFF"><i class="fa fa-warning fa-fw"></i> ATENCIÓN</h4>
	<div class="descripcion" style="color:#FFF">
		Sea consciente de su acción<br>
		Usted esta a punto de eliminar su cuenta<br>
		¿Está seguro de lo que desea hacer?
	</div>
</div>
<hr>
<div class="text-center">
	<form action="{{ urlFor('runElimiPartido',{'idPar': partido.id}) }}" method="POST">
		<button class="button small alert radius"><i class="fa fa-trash-o fa-fw fa-lg"></i>Eliminar grupo político</button>
	</form>
</div>

{% endblock %}
