<script src="{{ baseUrl() }}/assets-lpe/js/autosize.min.js"></script>
 <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<script id="articuloTemplate" type="text/template">
    <div class="form-group articulo">
        <div for="inputEmail" class="col-lg-2 control-label"><a href="#" class="eliminarArticulo"><i class="mdi mdi-close"></i></a> <span class="numSeccion">${numArticulo}</span></div>
        <div class="col-lg-10">
            <textarea name="articulo${numArticulo}" class="form-control input-sm" rows="2" placeholder="Escriba aquí el contenido de la seccion..."></textarea>
        </div>
    </div>
</script>
<script>
    var articulo = 2;
    $(document).ready(function() {
        //Events
        $("a.eliminarArticulo").on("click", eliminarArticulo);
        // autosize($('textarea'));
    });
    $(".nuevoArticulo").click(function(e) {
        var $holis = $("#articuloTemplate").html().replace("${numArticulo}", "1." + articulo)
        $("#listaSecciones").append($holis)
        console.log("aaaaaaa")
        articulo += 1
    });
    var eliminarArticulo = function(e) {
        console.log("holis");
        $(this).closest(".articulo").remove();
    }
</script>
<script>
tinymce.init({
  selector: 'div.tinymce',
  theme: 'inlite',
  plugins: 'image table link paste contextmenu textpattern autolink',
  insert_toolbar: 'quickimage quicktable',
  selection_toolbar: 'bold italic | quicklink h2 h3 blockquote',
  inline: true,
  content_css: [
    '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
    '//www.tinymce.com/css/codepen.min.css'    
  ]
});
</script>
