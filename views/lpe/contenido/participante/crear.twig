{% extends "lpe/master.twig" %} {% block linkhead %}
{% endblock %} {# ----------------------------------------------------------- #} {% block titulo %}Crear derecho{% endblock %} {% block body %}
<form action="#" method="POST">
    <article>
        <div class="titulo-derecho-background">
            <div class="overlay">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <h1><strong>Nuevo participante</strong></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <div class="form-group text-center">
                    <i class="zmdi zmdi-accounts-list-alt zmdi-hc-4x"></i>
                    <h5><b>Nombre</b></h5>
                    <input type="text" class="form-control input-lg" style="text-align: center" placeholder="Juan Alberto">
                </div>
                <div class="form-group">
                    <h5><b>Descripcion</b></h5>
                    <textarea rows="2" class="form-control"></textarea>
                </div>
                <div class="clearfix">
                    <a href="#" class="pull-left btn btn-link">Cancelar</a>
                    <button type=submit class="pull-right btn btn-primary">Crear participante</button>
                </div>
            </div>
        </div>
    </div>
</form>

{% endblock %} {# ----------------------------------------------------------- #} {% block scripts %}
<script src="{{ baseUrl() }}/assets-lpe/js/autosize.min.js"></script>
<script>
    $(document).ready(function() {
        autosize($('textarea'));
    });
</script> {% endblock %}